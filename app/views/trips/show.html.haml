%p
  = link_to t('View All of Stanley\'s Adventures'), trips_path
  = ' | '
  = link_to( t('Edit This Picture'), edit_trip_path(@trip) ) if logged_in?
  = ' | '
  = link_to( t('Delete This Picture'), trip_path(@trip), :method => :delete, :confirm => "Are you sure?" ) if logged_in?

%div.polaroid
  = image_tag @trip.photo.url(:medium)
  %br
  = @trip.location
#description
  %p= @trip.description
.clear
