= form_for( @trip, :html => { :multipart => true } ) do |f|
  - if @trip.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@trip.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @trip.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :location
    %br
    = f.text_field :location
  .field
    = f.label :description
    %br
    = f.text_area :description
  =f.file_field :photo

  .actions
    = f.submit
